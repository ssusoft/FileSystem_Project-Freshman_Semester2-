void mycat(char *argv)
{
     int ch;
    FILE *fp;
    // 일기전용으로 파일을 연다.
    if((fp = fopen(argv, "rb")) == NULL)
    {
        fprintf(stderr, "ERROR!\n");
        return;
    }

    // 내용 출력
    while((ch = getc(fp)) != EOF)
    {
        putchar(ch);
    }

    fclose(fp);
}
